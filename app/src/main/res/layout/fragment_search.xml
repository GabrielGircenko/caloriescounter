<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/sp_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp_user"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Date" />

    <TextView
        android:id="@+id/tv_date_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="14.09.16." />

    <TextView
        android:id="@+id/tv_date_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_date_start"
        android:layout_toRightOf="@id/tv_date_start"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="to" />

    <TextView
        android:id="@+id/tv_date_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_date_start"
        android:layout_toRightOf="@id/tv_date_to"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="14.09.16." />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_start"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Time" />

    <TextView
        android:id="@+id/tv_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="12:00" />

    <TextView
        android:id="@+id/tv_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time_start"
        android:layout_toRightOf="@id/tv_time_start"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:text="to" />

    <TextView
        android:id="@+id/tv_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_time_start"
        android:layout_toRightOf="@id/tv_time_to"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="15:00" />

</RelativeLayout>